{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "composite": true,

    // Bundler mode
    "allowImportingTsExtensions": true,
    "noEmit": true,

    // React
    "jsx": "react-jsx",

    // Path mapping for workspace dependencies
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@hp/types": ["../../packages/types/src/index.ts"],
      "@hp/core": ["../../packages/core/src/index.ts"]
    },

    // Linting
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"],
  "references": [
    { "path": "../../packages/types" },
    { "path": "../../packages/core" }
  ]
}
